<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:id="@+id/activity_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="temirbekia.ru.it_schedule.structure.ChooseActivity">


    <!--
    <include
        android:id="@+id/teachers_card"
        layout="@layout/teacher_card" />
    <include
        android:id="@+id/students_card"
        layout="@layout/student_card" />
    -->



    <!-- CardView of the Students schedule -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/card_students"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/card_teachers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/studentclick"
            android:clickable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/photo_students"
                android:layout_gravity="center"
                android:src="@drawable/first"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_students"
                android:layout_below="@+id/photo_students"
                android:textAlignment="center"
                android:text="Students"
                android:layout_gravity="center"
                android:textSize="35dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/card_teachers">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/teacherclick"
            android:clickable="true"
            android:padding="16dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/photo_teachers"
                android:layout_gravity="center"
                android:src="@drawable/second"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_teachers"
                android:text="Teachers"
                android:layout_below="@+id/photo_teachers"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="35dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
